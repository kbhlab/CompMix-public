  doi = {10.1017/S1366728921000699},
  abstract = {Language mixing is common in bilingual children's learning environments. Here, we investigated effects of language mixing on children's learning of new words. We tested two groups of 3-year-old bilinguals: French\textendash English (Experiment 1) and Spanish\textendash English (Experiment 2). Children were taught two novel words, one in single-language sentences (``Look! Do you see the dog on the teelo?'') and one in mixed-language sentences with a mid-sentence language switch (``Look! Do you see the chien/perro on the walem?''). During the learning phase, children correctly identified novel targets when hearing both single-language and mixed-language sentences. However, at test, French\textendash English bilinguals did not successfully recognize the word encountered in mixed-language sentences. Spanish\textendash English bilinguals failed to recognize either word, which underscores the importance of examining multiple bilingual populations. This research suggests that language mixing may sometimes hinder children's encoding of novel words that occur downstream, but leaves open several possible underlying mechanisms.},
  langid = {english},
  keywords = {bilingualism,children,code switching,language mixing,word learning},
  file = {C\:\\Users\\lenav\\Zotero\\storage\\MBHXSUIL\\Byers-Heinlein et al_2021_Effects of language mixing on bilingual children's word learning.pdf;C\:\\Users\\lenav\\Zotero\\storage\\HM7VDXYF\\1313070209316D3D6D84DE64DC2C42DC.html}
}

